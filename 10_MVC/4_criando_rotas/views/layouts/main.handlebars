<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MVC</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav id="navbar">
        
        <ul>
            <li><a href="/tasks">Ver todos</a></li>
            <li><a href="/tasks/add">Criar</a></li>
        </ul>
        <button id="theme-toggle-btn">üåô</button>
    </nav>
    <div class="container">
        {{{body}}}
    </div>

    

    <script>
        const themeToggleBtn = document.getElementById('theme-toggle-btn');
        const body = document.querySelector('body');

        // Fun√ß√£o para alternar o tema e salvar a prefer√™ncia
        function toggleTheme() {
            body.classList.toggle('dark-mode');

            // Verifica se o modo escuro est√° ativo para salvar no localStorage
            if (body.classList.contains('dark-mode')) {
                localStorage.setItem('theme', 'dark');
                themeToggleBtn.textContent = '‚òÄÔ∏è'; // Troca o √≠cone para sol
            } else {
                localStorage.removeItem('theme'); // Ou localStorage.setItem('theme', 'light');
                themeToggleBtn.textContent = 'üåô'; // Troca o √≠cone para lua
            }
        }

        // Verifica a prefer√™ncia do usu√°rio assim que a p√°gina carrega
        if (localStorage.getItem('theme') === 'dark') {
            body.classList.add('dark-mode');
            themeToggleBtn.textContent = '‚òÄÔ∏è'; // Garante que o √≠cone certo seja exibido
        }

        // Adiciona o evento de clique ao bot√£o
        themeToggleBtn.addEventListener('click', toggleTheme);
    </script>
    
</body>
</html>